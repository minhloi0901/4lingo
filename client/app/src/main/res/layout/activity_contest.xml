<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Big TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuộc thi đang diễn ra"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/black_bottom_line"
        android:padding="5dp"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/currentContest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="20dp"/>


    <!-- Big TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuộc thi sắp diễn ra"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/black_bottom_line"
        android:padding="5dp"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commingContest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="20dp" />


    <!-- Big TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuộc thi đã diễn ra"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/black_bottom_line"
        android:padding="5dp"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/happenedContest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
