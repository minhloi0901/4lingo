<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".WordMatchingActivity"
    android:layout_marginTop="@dimen/navbar_margin"
    android:layout_marginBottom="@dimen/navbar_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/align_margin">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/big_icon_size"
            android:layout_height="@dimen/item_height"
            app:cardCornerRadius="@dimen/big_icon_size"
            android:backgroundTint="@color/black"
            android:id="@+id/backButton"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/back_icon"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </View>
        <ImageView
            android:layout_width="@dimen/big_icon_size"
            android:layout_height="@dimen/item_height"
            android:layout_gravity="center|right"
            android:src="@drawable/clock_icon">

        </ImageView>
        <TextView
            android:layout_width="@dimen/big_icon_size"
            android:layout_height="@dimen/item_height"
            android:text="1:30"
            android:id="@+id/timeCounting"
            android:textSize="@dimen/sub_header_text_size"
            android:gravity="center"
            android:layout_margin="10dp">
        </TextView>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="5"
        android:layout_margin="@dimen/align_margin">

       <com.google.android.material.card.MaterialCardView
           android:layout_width="@dimen/item_width"
           android:layout_height="@dimen/item_height"
           android:backgroundTint="@color/white"
           app:cardCornerRadius="@dimen/big_rounded_conor"
           app:strokeColor="@color/blue"
           app:strokeWidth="@dimen/big_stroke_size"
           android:layout_marginTop="@dimen/item_distance">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Eng 1"
               android:gravity="center"
               android:id="@+id/englishText1">
           </TextView>
       </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/big_rounded_conor"
            app:strokeColor="@color/blue"
            app:strokeWidth="@dimen/big_stroke_size"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/item_distance">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Viet 1"
                android:gravity="center"
                android:id="@+id/vietnameseText1">
            </TextView>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/big_rounded_conor"
            app:strokeColor="@color/blue"
            app:strokeWidth="@dimen/big_stroke_size"
            android:layout_marginTop="@dimen/item_distance">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Eng 2"
                android:gravity="center"
                android:id="@+id/englishText2">
            </TextView>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/big_rounded_conor"
            app:strokeColor="@color/blue"
            app:strokeWidth="@dimen/big_stroke_size"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/item_distance">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Viet 2"
                android:gravity="center"
                android:id="@+id/vietnameseText2">
            </TextView>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/big_rounded_conor"
            app:strokeColor="@color/blue"
            app:strokeWidth="@dimen/big_stroke_size"
            android:layout_marginTop="@dimen/item_distance">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Eng 3"
                android:gravity="center"
                android:id="@+id/englishText3">
            </TextView>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/big_rounded_conor"
            app:strokeColor="@color/blue"
            app:strokeWidth="@dimen/big_stroke_size"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/item_distance">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Viet 3"
                android:gravity="center"
                android:id="@+id/vietnameseText3">
            </TextView>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/big_rounded_conor"
            app:strokeColor="@color/blue"
            app:strokeWidth="@dimen/big_stroke_size"
            android:layout_marginTop="@dimen/item_distance">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Eng 4"
                android:gravity="center"
                android:id="@+id/englishText4">
            </TextView>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/big_rounded_conor"
            app:strokeColor="@color/blue"
            app:strokeWidth="@dimen/big_stroke_size"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/item_distance">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Viet 4"
                android:gravity="center"
                android:id="@+id/vietnameseText4">
            </TextView>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/big_rounded_conor"
            app:strokeColor="@color/blue"
            app:strokeWidth="@dimen/big_stroke_size"
            android:layout_marginTop="@dimen/item_distance">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Eng 5"
                android:gravity="center"
                android:id="@+id/englishText5">
            </TextView>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/big_rounded_conor"
            app:strokeColor="@color/blue"
            app:strokeWidth="@dimen/big_stroke_size"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/item_distance">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Viet 5"
                android:gravity="center"
                android:id="@+id/vietnameseText5">
            </TextView>
        </com.google.android.material.card.MaterialCardView>


    </GridLayout>


</LinearLayout>