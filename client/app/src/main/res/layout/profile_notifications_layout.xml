<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/medium_radius_border_green"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nhắc nhở SMS"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/smsNotiToggle"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track"
            android:checked="true"
            app:switchMinWidth="100dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#19D937" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nhắc nhở Email"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/emailNotiToggle"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track"
            android:checked="true"
            app:switchMinWidth="100dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#19D937" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Giờ nhắc nhở"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/notiTime"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="23:00"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="textEnd"
            android:padding="8dp"
            >
        </TextView>
    </LinearLayout>
</LinearLayout>