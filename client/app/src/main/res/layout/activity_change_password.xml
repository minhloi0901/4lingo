<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Controllers.ChangePasswordActivity"
    android:padding="25dp"
    android:background="@drawable/background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/staticEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="24sp"
            />

        <EditText
            android:id="@+id/changePassword1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:background="@drawable/big_radius_border_green"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/black"
            android:layout_below="@+id/staticEmail"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/changePassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:background="@drawable/big_radius_border_green"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/changePassword1"
            />

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/ChangePass"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐỔI MẬT KHẨU"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/big_radius_border_green"
            android:padding="16dp"
            android:backgroundTint="#19D937"
            />

    </RelativeLayout>
</LinearLayout>
