<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".RegisterActivity"
    android:padding="25dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hãy bắt đầu học cùng 4Lingo"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            />

        <EditText
            android:id="@+id/loginName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên đăng nhập"
            android:background="@drawable/big_radius_border_green"
            android:padding="16dp"
            android:layout_marginBottom="25dp"
            android:layout_below="@id/title"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/big_radius_border_green"
            android:padding="16dp"
            android:layout_marginBottom="25dp"
            android:layout_below="@+id/loginName"
            />

        <LinearLayout
            android:id="@+id/passwordLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/big_radius_border_green"
            android:layout_marginBottom="25dp"
            android:layout_below="@id/email"
            >
            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu"
                android:background="#FFFFFF"
                android:layout_margin="16dp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/visibleButton1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_view"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/refillPasswordLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/big_radius_border_green"
            android:layout_marginBottom="25dp"
            android:layout_below="@id/passwordLinearLayout"
            >
            <EditText
                android:id="@+id/refillPassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Nhập lại mật khẩu"
                android:background="#FFFFFF"
                android:layout_margin="16dp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/visibleButton2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_view"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/createAccountButton"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TẠO TÀI KHOẢN"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/big_radius_border_green"
            android:padding="16dp"
            android:backgroundTint="#19D937"
            />

    </RelativeLayout>


</LinearLayout>
