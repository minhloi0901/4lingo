<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginTop="24dp"
    android:background="@drawable/mistake_background"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/textViewAssignmentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8226; Assignment Type"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8226; Lá»—i sai:"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/textViewMistakeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mistake Description"
            android:textSize="20sp"
            android:layout_margin="8dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewPlay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_replay"
        android:layout_gravity="center_vertical"
        android:clickable="true"/>
</LinearLayout>
